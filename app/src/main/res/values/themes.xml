<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeOverlay.App.Search" parent="">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/blue_100</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.Background" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.ListBackground" parent="">
        <item name="colorPrimary">@color/grey_100</item>
        <item name="colorOnPrimary">@color/grey_200</item>
    </style>

    <style name="TextAppearance.App.Title.Small" parent="">
        <item name="android:textSize">@dimen/title_small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Title.Big" parent="">
        <item name="android:textSize">@dimen/title_big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Label.Big" parent="">
        <item name="android:textSize">@dimen/label_big_text_size</item>
    </style>

    <style name="TextAppearance.App.Label.Small" parent="">
        <item name="android:textSize">@dimen/label_small_text_size</item>
    </style>
</resources>